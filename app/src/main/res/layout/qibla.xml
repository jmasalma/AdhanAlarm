<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/qibla">
    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:paddingStart="2dp" android:paddingEnd="2dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:paddingStart="5dp" android:paddingEnd="5dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="@string/latitude" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="@string/longitude" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="@string/qibla" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/current_latitude_deg"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="end" android:text="~" />
            <TextView android:id="@+id/current_longitude_deg"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="end" android:text="~" />
            <TextView android:id="@+id/current_qibla_deg"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="end" android:text="~" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:paddingStart="5dp" android:paddingEnd="5dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="°" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="°" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="°" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TextView android:id="@+id/current_latitude_min"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="end" android:text="~" />
            <TextView android:id="@+id/current_longitude_min"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="end" android:text="~" />
            <TextView android:id="@+id/current_qibla_min"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="end" android:text="~" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:paddingStart="5dp" android:paddingEnd="5dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="'" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="'" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="'" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TextView android:id="@+id/current_latitude_sec"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="end" android:text="~" />
            <TextView android:id="@+id/current_longitude_sec"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="end" android:text="~" />
            <TextView android:id="@+id/current_qibla_sec"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="end" android:text="~" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:paddingStart="5dp" android:paddingEnd="5dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="''" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="''" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="''" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingTop="5dp" android:paddingBottom="5dp"
        android:paddingStart="2dp" android:paddingEnd="2dp">
        <islam.adhanalarm.view.QiblaCompassView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="fill|center" android:id="@+id/qibla_compass" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:paddingStart="2dp" android:paddingEnd="2dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bearing_north"
            android:text="@string/bearing_north"
            android:paddingStart="2dp" android:paddingEnd="2dp" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bearing_qibla"
            android:text="@string/bearing_qibla"
            android:paddingStart="2dp" android:paddingEnd="2dp" />
        <TextView android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content" android:paddingTop="3dp"
            android:text="@string/compass_disclaimer" />
    </LinearLayout>
</LinearLayout>